@model List<FYP.Models.Transaction>

@{
    ViewBag.Title = "Payment History";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="db-breadcrumb">
        <h4 class="breadcrumb-title">Users</h4>
        <ul class="db-breadcrumb-list">
            <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
            <li>Payment History</li>
        </ul>
    </div>

    <div class="row">

        <div class="col-lg-12 m-b30">
            <div class="widget-box">
                <div class="wc-title">
                    <h4>All Bookings Payemnt</h4>
                </div>
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" style="width:100%;" cellspacing="0">
                                <thead>
                                    <tr class="text-center">
                                        <th>Transaction ID</th>
                                        <th>Card No</th>
                                        <th>Currency</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Description</th>
                                        <th>User</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="text-center">
                                            <td>@item.Id</td>
                                            <td>@item.Card_Number</td>
                                            <td>@item.Currency</td>
                                            <td>@item.Amount</td>
                                            <td>@item.Status</td>
                                            <td>@item.Description</td>
                                            <td>@item.User.Email</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="ttr-overlay"></div>

<script src="~/Content/assetstable/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/assetstable/vendor/datatables/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $.noConflict();
        var table = $('#dataTable').DataTable();
    });</script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Content/assetstable/vendor/datatables/dataTables.bootstrap4.min.js"></script>
<script src="~/Content/assetstable/vendor/bootstrap/bootstrap.bundle.min.js"></script>



