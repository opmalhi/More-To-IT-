            data: [@Model.total_cities,@Model.total_places,@Model.total_hotels]
        }]
    };

    //Bar Chart
    var bar =
    {
        labels: ["CITIES", "PLACES", "PACKAGES","HOTELS"],
            datasets: [{

                backgroundColor: [
                    "#db4b24",
                    "#668bff",
                    "#8340f6",
                    "#8699fb",
                ],
                borderWidth: 2,
                data: [@Model.total_cities,@Model.total_places,@Model.total_packages,@Model.total_hotels]
            }]
    };


    window.onload = function () {
        //First DonutChart
        //var ctx1 = document.getElementById("Doughnutcanvas").getContext("2d");
        //window.myBar = new Chart(ctx1,
        //    {
