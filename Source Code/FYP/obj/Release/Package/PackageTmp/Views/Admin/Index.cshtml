<link href="~/Content/adminassets/assets/css/dashboard.css" rel="stylesheet" />
<div class="db-breadcrumb">
    <h4 class="breadcrumb-title">Dashboard</h4>
    <ul class="db-breadcrumb-list">
        <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
        <li>Dashboard</li>
    </ul>
</div>

<!-- Card -->
<div class="row">
    <div class="col-md-6 col-lg-3 col-xl-3 col-sm-6 col-12">
        <div class="widget-card widget-bg1">
            <div class="wc-item">
                <h4 class="wc-title">
                    No. of Users
                </h4>
                <span class="wc-des">
                    Users Review
                </span>
                <span class="wc-stats counter">
                    @Model.total_users
                </span>
                <div class="progress wc-progress">
                    <div id="ttl-user" class="progress-bar" role="progressbar" style="width:0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>

            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 col-xl-3 col-sm-6 col-12">
        <div class="widget-card widget-bg2">
            <div class="wc-item">
                <h4 class="wc-title">
                    No. of Admins
                </h4>
                <span class="wc-des">
                    Admins Review
                </span>
                <span class="wc-stats counter">
                    @Model.total_admins
                </span>
                <div class="progress wc-progress">
                    <div id="ttl-admin" class="progress-bar" role="progressbar" style="width: 90%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 col-xl-3 col-sm-6 col-12">
        <div class="widget-card widget-bg3">
            <div class="wc-item">
                <h4 class="wc-title">
                    No. of Cities
                </h4>
                <span class="wc-des">
                    Cities Review
                </span>
                <span class="wc-stats counter">
                    @Model.total_cities
                </span>
                <div class="progress wc-progress">
                    <div id="ttl-city" class="progress-bar" role="progressbar" style="width: 88%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 col-xl-3 col-sm-6 col-12">
        <div class="widget-card widget-bg4">
            <div class="wc-item">
                <h4 class="wc-title ">
                    No. of Places
                </h4>
                <span class="wc-des">
                    Famous Places Review
                </span>
                <span class="wc-stats counter">
                    @Model.total_places
                </span>
                <div class="progress wc-progress">
                    <div id="ttl-place" class="progress-bar" role="progressbar" style="width: 65%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>

            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 col-xl-3 col-sm-6 col-12">
        <div class="widget-card widget-bg5">
            <div class="wc-item">
                <h4 class="wc-title ">
                    No. of Hotels
                </h4>
                <span class="wc-des">
                    Hotels Review
                </span>
                <span class="wc-stats counter">
                    @Model.total_hotels
                </span>
                <div class="progress wc-progress">
                    <div id="ttl-hotel" class="progress-bar" role="progressbar" style="width: 65%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>

            </div>
        </div>
    </div>


    <div class="col-md-6 col-lg-3 col-xl-3 col-sm-6 col-12">
        <div class="widget-card widget-bg6">
            <div class="wc-item">
                <h4 class="wc-title">
                    No. of Packages
                </h4>
                <span class="wc-des">
                    Packages Review
                </span>
                <span class="wc-stats counter">
                    @Model.total_packages
                </span>
                <div class="progress wc-progress">
                    <div id="ttl-package" class="progress-bar" role="progressbar" style="width: 90%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 col-xl-3 col-sm-6 col-12">
        <div class="widget-card widget-bg7">
            <div class="wc-item">
                <h4 class="wc-title">
                    No. of Bookings
                </h4>
                <span class="wc-des">
                    Bookings Review
                </span>
                <span class="wc-stats counter">
                    @Model.total_bookings
                </span>
                <div class="progress wc-progress">
                    <div id="ttl-booking" class="progress-bar" role="progressbar" style="width: 90%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 col-xl-3 col-sm-6 col-12">
        <div class="widget-card widget-bg8">
            <div class="wc-item">
                <h4 class="wc-title">
                    No. of Employee
                </h4>
                <span class="wc-des">
                    Tour Guider Review
                </span>
                <span class="wc-stats counter">
                    @Model.total_tourGuiderEmployee
                </span>
                <div class="progress wc-progress">
                    <div id="ttl-employee" class="progress-bar" role="progressbar" style="width: 90%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 col-xl-3 col-sm-6 col-12">
        <div class="widget-card widget-bg9">
            <div class="wc-item">
                <h4 class="wc-title">
                    No. of Vehicle
                </h4>
                <span class="wc-des">
                    Rental Vehicle Review
                </span>
                <span class="wc-stats counter">
                    @Model.total_vehicle
                </span>
                <div class="progress wc-progress">
                    <div id="ttl-vehicle" class="progress-bar" role="progressbar" style="width: 90%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>



</div>
