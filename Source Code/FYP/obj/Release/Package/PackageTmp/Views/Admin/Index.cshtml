@model FYP.Models.DashboardModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        margin: 10px 15px;
    }
</style>
<link href="~/Content/adminassets/assets/css/color/color-1.css" rel="stylesheet" />
