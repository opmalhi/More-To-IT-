                </div>*@
            <div class="modal-body">
                <div class="row">
                    <div class="col-7">
                        <img id="packageImage" style="width:100%; height:435px;" onclick="openImageInTab(this)" />
                    </div>
                    <div class="col-5" style="padding-top:10px;">
                        <div style="padding:25px;">
                            <label>Package Name:</label>
                            <span id="packageName"></span><hr />
                            <label>Pick Up Location:</label>
                            <span id="pickUpLocation"></span><hr />
                            <label>Trip Start Date:</label>
                            <span id="tripDate"></span><hr />
                            <label>Total Trip Days</label>
                            <span id="tripDays"></span><hr />
                            <label>Package Price</label>
                            <span id="tripPrice"></span>
                        </div>
                    </div>
                </div>
            </div>
            @*<div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>*@
        </div>
    </div>
</div>

<script src="~/Content/assetstable/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/assetstable/vendor/datatables/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $.noConflict();
        var table = $('#dataTable').DataTable();
    });

    function packageDetails(data) {
        //var value = $(data).closest('tr').children('td:first').text();
        //console.log(value);
        $.get("/Admin/PackageDetails/" + data, function (res) {
        debugger
            console.log(res)
            if (res.packageDetail.IsCustomize == false) {
                let a = res.packageDetail.Picture;
                let result = a.replace("~/", "");
                $("#packageImage").attr("src", "http://localhost:53010/" + result);
                console.log(result);
            } else {
                let result = res.packageDetail.Picture;
                $("#packageImage").attr("src", "" + result);
            }

            $("#packageName").text(res.packageDetail.Name);
            $("#pickUpLocation").text(res.packageDetail.Pick_Up_Location);
            $("#tripDate").text(res.packageDetail.DateString);
            $("#tripDays").text(res.packageDetail.No_of_Days);
            $("#tripPrice").text("Rs " + res.packageDetail.Price);

        });
    }

</script>
